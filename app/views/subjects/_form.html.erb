<div class="container">
  <%= bootstrap_form_for(@subject) do |f| %>
      <%= f.text_field :name, label: 'Nazwa Przedmiotu' %>
      <%= f.collection_select :user_id, @teachers, :id, :name, label: 'Nauczyciel' %>
      <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
      <%= link_to 'Anuluj', pupils_path, class: 'btn btn-default' %>
  <% end %>
</div>