<div class="page-header">
  <h1>Uczeń <strong><%= @pupil.name %> <%= @pupil.lastname %></strong></h1>
</div>


<div class="container">
  <div class="page-header">
    <h1>Przedmioty</h1>
  </div>
  <table data-toggle="table" data-search="true">
    <thead>
    <tr>
      <th>Nazwa przedmiotu</th>
      <th>Nauczyciel prowadzący</th>
      <th>Oceny</th>
      <th>Średnia</th>
    </tr>
    </thead>
    <tbody>
    <% @pupil.subjects.each do |subject| %>
        <tr>
          <td><%= subject.name %></td>
          <td><%= subject.teacher %></td>
          <td>
            <% subject.grades.each do |grade| %>
                <%= grade.short_name %>,
            <% end %>
          </td>
          <td>
            <%= subject.grades.average(:value).round(2) unless subject.grades.count.zero? %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>


