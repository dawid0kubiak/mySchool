<div class="page-header">
  <h1>Teachers</h1>
</div>
<%= link_to 'Nowy nauczyciel', new_teacher_path, class: 'btn btn-primary' %>
<table data-toggle="table" data-search="true">
  <thead>
  <tr>
    <th>ImiÄ™</th>
    <th>Nazwisko</th>
    <th>Email</th>
    <th>Telefon</th>
    <th>Akcje</th>
  </tr>
  </thead>

  <tbody>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.lastname %></td>
        <td><a href="mailto:<%= teacher.email %>" ><%= teacher.email %></a></td>
        <td><%= teacher.phone %></td>
        <td>
          <%= link_to 'Show', teacher %>
          <%= link_to 'Edit', edit_teacher_path(teacher) %>
          <%= link_to 'Destroy', teacher, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

