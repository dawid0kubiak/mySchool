<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= bootstrap_form_for(@user) do |f| %>
          <%= f.text_field :name, label: 'ImiÄ™' %>
          <%= f.text_field :lastname, label: 'Nazwisko' %>
          <%= f.email_field :email, label: 'e-mail' %>
